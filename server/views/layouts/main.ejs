<!DOCTYPE html>
<html lang="en" data-theme="<%= theme || 'light' %>">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />
    <title><%= pageTitle || 'TapTag' %></title>
    <link rel="stylesheet" href="/assets/css/main.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <% if (additionalStyles && additionalStyles.length) { %>
      <% additionalStyles.forEach(function (href) { %>
        <link rel="stylesheet" href="<%= href %>" />
      <% }); %>
    <% } %>
  </head>
  <body class="<%= bodyClass || '' %>">
    <div class="page-wrapper">
      <main class="page-main">
        <%- body %>
      </main>
    </div>
    <% if (additionalScripts && additionalScripts.length) { %>
      <% additionalScripts.forEach(function (src) { %>
        <script src="<%= src %>" defer></script>
      <% }); %>
    <% } %>
  </body>
</html>

