<section class="tag-app">
  <article class="policy-card">
    <h1><%= pageTitle %></h1>
    <p class="policy-lead">
      Last updated on
      <%= new Date().toLocaleDateString('en-IN', { year: 'numeric', month: 'long', day: 'numeric' }) %>
    </p>
    <% content.forEach(function(section) { %>
      <section class="policy-block">
        <h2><%= section.heading %></h2>
        <p><%= section.body %></p>
      </section>
    <% }) %>
  </article>
</section>
